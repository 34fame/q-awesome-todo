{
   "database": {
      "rules": "database.rules.json"
   },
   "hosting": {
      "public": "dist/spa",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
         {
            "source": "**",
            "destination": "/index.html"
         }
      ]
   },
   "emulators": {
      "database": {
         "port": 9000
      },
      "hosting": {
         "port": 5000
      }
   }
}
